@model IEnumerable<HighSchoolManagmentApp.Models.Student>

@{
    ViewData["Title"] = "All Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Students</h2>

<p>
    <a asp-action="new">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.familyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.absence)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.familyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
                @Html.ActionLink("grade", "grade", new { id = item.Grade })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.absence)
                @Html.ActionLink("absence", "absence", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
