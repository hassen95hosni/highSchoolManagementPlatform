@model HighSchoolManagmentApp.ViewModel.StudentViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>
@using (Html.BeginForm("create", "student"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.student.Name)
        @Html.TextBoxFor(m => m.student.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.student.familyName)
        @Html.TextBoxFor(m => m.student.familyName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.student.Grade)
        @Html.DropDownListFor(m => m.student.Grade, new SelectList(Model.grade, "Id", "Name"), "Select grade", new { @class = "form-control" })
    </div>
   
    <button type="submit" class=" btn btn_primary"> save </button>
}
