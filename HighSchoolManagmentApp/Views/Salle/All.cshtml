@model IEnumerable<HighSchoolManagmentApp.Models.Salle>

@{
    ViewData["Title"] = "All Classes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Classes</h2>

<p>
    <a asp-action="new">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreEtudiant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.materiels)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEtudiant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <th>

                @Html.ActionLink("materiel", "materiel", new { id = item.Id })
            </th>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
