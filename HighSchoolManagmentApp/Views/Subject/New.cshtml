@model HighSchoolManagmentApp.ViewModel.SubjectViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>
@using (Html.BeginForm("create", "subject"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.subject.Name)
        @Html.TextBoxFor(m => m.subject.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.subject.Besoin)
        @Html.DropDownListFor(m => m.subject.Besoin, new SelectList(Model.materiel, "Id", "Nom"), "Select Materiels", new { @class = "form-control" })
    </div>

    <button type="submit" class=" btn btn_primary"> save </button>
}
